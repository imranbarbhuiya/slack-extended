{
	"name": "slack-extended",
	"displayName": "Slack extended",
	"version": "1.0.0",
	"description": "A chrome extension to add additional features to slack",
	"author": "Parbez <imranbarbhuiya.fsd@gmail.com>",
	"scripts": {
		"dev": "plasmo dev",
		"build": "plasmo build",
		"package": "plasmo package",
		"lint": "eslint --cache .",
		"format": "prettier --write --cache --experimental-cli ."
	},
	"dependencies": {
		"@plasmohq/storage": "^1.15.0",
		"plasmo": "0.90.5",
		"react": "19.1.1",
		"react-dom": "19.1.1"
	},
	"devDependencies": {
		"@types/chrome": "0.1.3",
		"@types/node": "24.2.1",
		"@types/react": "19.1.10",
		"@types/react-dom": "19.1.7",
		"eslint": "^9.33.0",
		"eslint-config-mahir": "^1.0.7",
		"prettier": "3.6.2",
		"typescript": "5.9.2"
	},
	"manifest": {
		"host_permissions": [
			"https://app.slack.com/*",
			"https://*.slack.com/*"
		]
	},
	"packageManager": "pnpm@10.14.0"
}
